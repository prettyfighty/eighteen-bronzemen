<div class="container">
  <%= render 'layouts/navbar' %>

  <h1 class="mb-3 text-center fw-bold"><%= t("my_group") %></h1>

  <div>
    <%= link_to t("back_to_mission_list"), missions_path, class: "btn btn-outline-danger" %>
  </div>

  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th></th>
        <th><%= t("name") %></th>
        <th><%= t("author") %></th>
        <th><%= t("member_number") %></th>
        <th><%= t("privacy") %></th>
        <th><%= t("created_at") %></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each_with_index do |group, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to group.name, group_path(group), class: "text-decoration-none text-info fw-bold" %></td>
          <td><%= group.user.email %></td>
          <td><%= group.members.size %></td>
          <td><%= group.privacy_i18n %></td>
          <td><%= group.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div id="paginate">
    <%= paginate @groups %>
  </div>
</div>
