<div class="container">
  <%= render 'layouts/navbar' %>

  <h1 class="mb-3 text-center fw-bold"><%= t("user_sign_in") %></h1>

  <div class="d-flex justify-content-center align-items-center">
    <div class="user-form-container mt-5 border border-dark p-5">
      <%= simple_form_for @user, url: sign_in_sessions_path do |f| %>
        <%= f.input :email, label: t("email"), input_html: {class: "form-control"} %>
        <%= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
        <%= f.button :submit, t("sign_in"), class: "btn btn-danger my-3" %>
        <%= link_to t("new_user_sign_up"), sign_up_users_path, class: "btn btn-outline-secondary mx-3" %>
      <% end %>
    </div>
  </div>
</div>
