<h1 class="mb-3 text-center fw-bold"><%= t("user_sign_up") %></h1>

<div class="d-flex justify-content-center align-items-center">
  <div class="user-form-container mt-5 border border-dark p-5">
    <%= simple_form_for @user, url: sign_up_users_path do |f| %>
      <%= f.input :email, label: t("email"), input_html: {class: "form-control"} %>
      <%= f.input :password, label: t("password"), input_html: {class: "form-control"} %>
      <%= f.input :password_confirmation, label: %Q(<abbr title="required">*</abbr> #{t("confirm_password")}).html_safe, input_html: {class: "form-control"} %>
      <%= f.button :submit, t("sign_up"), class: "btn btn-danger my-3" %>
      <%= link_to t("back_to_sign_in"), sign_in_sessions_path, class: "btn btn-outline-secondary mx-3" %>
    <% end %>
  </div>
</div>
